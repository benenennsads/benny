let currentIndex = 0;

function loadFlashcard(index) {
    const flashcard = flashcards[index];
    document.getElementById('question-number').innerText = `Question ${flashcard.number}`;
    document.getElementById('question').innerText = flashcard.question;
    const optionsList = document.getElementById('options');
    optionsList.innerHTML = '';
    flashcard.options.forEach(option => {
        const li = document.createElement('li');
        li.innerText = option;
        optionsList.appendChild(li);
    });
}

document.getElementById('next-btn').addEventListener('click', () => {
    if (currentIndex < flashcards.length - 1) {
        currentIndex++;
        loadFlashcard(currentIndex);
    }
});

document.getElementById('prev-btn').addEventListener('click', () => {
    if (currentIndex > 0) {
        currentIndex--;
        loadFlashcard(currentIndex);
    }
});

// Load the first flashcard on page load
loadFlashcard(currentIndex);
